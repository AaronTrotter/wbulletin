        <div class="well">
          <%= content_tag :h3, truncate(entry.title, :length => 45, :omission => '...'), :title => entry.title %>
          <%= feed_entry_summary(entry).html_safe %>
          <p>
            <a class="btn" href="#">Read Â»</a>
          </p>
        </div>
      </div>
    <%- end%>
  </div>
<%- end -%>